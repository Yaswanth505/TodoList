<%- include("header"); -%>
    <div class="box" id="heading">
        <h1>It's <%= kind_of_day %>
                <h2>Create your To do List for Today</h2>
    </div>
    <div class="box">
        <% for(i=0; i< Dotasks.length;i++) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%= Dotasks[i]._id %>" onChange="this.form.submit()" name="checkbox">
                    <p>
                        <%= Dotasks[i].name %>

                    </p>
                </div>
                <input type="hidden" name="category" value="<%= kind_of_day %>">
            </form>
            <%}%>

                <form class="item" action="/" method="post">
                    <input type="text" name="NewItem" placeholder="New Item">

                    <button type="submit" name="list" value="<%= kind_of_day %>">+</button>
                </form>
    </div>
    <%- include("footer") -%>